{
  "name": "CompTIA Certification Labs",
  "image": "ghcr.io/srl-labs/containerlab/devcontainer-dind-slim:0.68.0",
  "runArgs": [
    "--privileged",
    "--network=host"
  ],
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "srl-labs.vscode-containerlab",
        "ms-vscode.vscode-yaml",
        "redhat.vscode-yaml",
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "postCreateCommand": "containerlab version && docker pull alpine:latest && docker pull ubuntu:22.04 && echo '\nâœ… Environment ready! Navigate to any lab directory and run: ./scripts/deploy.sh\n'",
  "remoteUser": "vscode"
}
